

@model ShopCreateViewModel

<div class="container"><h2>Create Shop</h2></div>

<div class="container mx-auto col-8">
    <form asp-action="Create" asp-controller="Shop" asp-anti-forgery="true">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="shop_name">shop name</label>
            <input type="text" class="form-control" id="username" placeholder="username" asp-for="shop_name">
        </div>
        <div class="form-group">
            <label asp-for="db_path">database path</label>
            <input type="text" class="form-control" id="password" placeholder="Password" asp-for="db_path">
        </div>
        <div class="form-group">
            <label asp-for="db_password">database password</label>
            <input type="text" class="form-control" id="password" placeholder="retype Password" asp-for="db_password">
        </div>
        <button type="submit" class="btn btn-primary">create</button>
    </form>
</div>
